{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "run",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "start",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "start:dev"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\[Nest\\]",
                    "endsPattern": "Nest started"
                }
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "pnpm",
            "args": [
                "test"
            ],
            "group": "test"
        }
    ]
}